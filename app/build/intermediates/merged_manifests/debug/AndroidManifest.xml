<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theoreticalffscorer"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/n3_logo"
        android:label="Road Runner Tuner"
        android:roundIcon="@mipmap/n3_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.TheoreticalFFScorer" >
        <activity
            android:name="com.example.theoreticalffscorer.ui.main.TuningProcess"
            android:exported="false"
            android:label="@string/title_activity_tuning_process"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.example.theoreticalffscorer.Home"
            android:exported="false"
            android:label="Home"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.example.theoreticalffscorer.MainActivity"
            android:exported="true"
            android:label="RR Tuner"
            android:theme="@style/FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.theoreticalffscorer.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>