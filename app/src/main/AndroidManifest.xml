<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theoreticalffscorer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/n3_logo"
        android:label="Road Runner Tuner"
        android:roundIcon="@mipmap/n3_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheoreticalFFScorer">
        <activity
            android:name=".ui.main.TuningProcess"
            android:exported="false"
            android:label="@string/title_activity_tuning_process"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="Home"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="RR Tuner"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>